<h1>id = <%= @task.id %> のタスク詳細ページ</h1>

<div class="row">
  <div class="col-xs-6">
      <table class="table table-bordered">
        <thead>
          <tr class="info">
            <th>id</th>
            <th>タスク</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
    
          <tr>
            <td><%= @task.id %></td>
            <td><%= @task.content %></td>
            <td><%= @task.status %></td>
          </tr>
    
        </tbody>
      </table>
  </div>
</div>



<%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>